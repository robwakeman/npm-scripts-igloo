{
  "name": "npmscripts-03",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "devserver": "live-server",
    "watch-sass": "node-sass sass/style.scss css/style.css --watch",
    "compile-sass": "node-sass sass/style.scss css/style.comp.css --output-style expanded",
    "concat-css": "concat -o css/style.concat.css css/fontawesome-all.css css/style.comp.css",
    "prefix-css": "postcss css/style.concat.css --use autoprefixer -o css/style.prefix.css",
    "compress-css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build-css": "npm-run-all compile-sass concat-css prefix-css compress-css",
    "watch": "watch \"npm run watch-sass -s\"",
    "start": "npm-run-all -p devserver watch"
  },
  "browserslist": [
    "last 5 versions"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.6.1",
    "autoprefixer": "^9.4.7",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1",
    "watch": "^1.0.2"
  }
}
